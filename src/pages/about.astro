---

<Layout title="About | Dylan Isaac">
  <Header />
  <main id="main" class="max-w-4xl mx-auto px-6 md:px-8 py-16">
    <h1 class="text-4xl font-bold mb-12 text-content dark:text-dark-content">A Bit About Me</h1>

    <div class="space-y-12">
      <!-- Info Sections -->
      <Section title="Areas of Expertise" backgroundColor="secondary">
        <ul class="space-y-6">
          {expertise.map(({ area, description }) => (
            <li>
              <h3 class="text-xl font-medium mb-2 text-content dark:text-dark-content">{area}</h3>
              <p class="text-content-muted dark:text-dark-content-muted">{description}</p>
            </li>
          ))}
        </ul>
      </Section>

      <Section title="Values" backgroundColor="accent">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {values.map(({ title, emoji, description }) => (
            <div class="bg-surface dark:bg-dark-surface p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
              <div class="text-4xl mb-4 flex justify-center" role="img" aria-hidden="true">
                {emoji}
              </div>
              <h3 class="text-xl font-medium mb-2 text-content dark:text-dark-content text-center">{title}</h3>
              <p class="text-content-muted dark:text-dark-content-muted text-center">{description}</p>
            </div>
          ))}
        </div>
      </Section>
      <Section title="Interests & Explorations" backgroundColor="accent-yellow">
        <ul class="space-y-6">
          {interests.map(({ title, description }) => (
            <li>
              <h3 class="text-xl font-medium mb-2 text-content dark:text-dark-content">{title}</h3>
              <p class="text-content-muted dark:text-dark-content-muted">{description}</p>
            </li>
          ))}
        </ul>
      </Section>
      <!-- Contact Section -->
      <Section title="Get in Touch" backgroundColor='primary'>
        <p class="text-lg mb-6">
          I believe in building tools and systems that <strong>empower people</strong>. If that speaks to you, let's connect. Email me, and let's start creating something incredible.
        </p>
        <EmailCTA email="me@DylanIsa.ac" />
      </Section>
    </div>
  </main>
</Layout> 