---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Section from '../../components/Section.astro';
import Heading from '../../components/Heading.astro';
---

<Layout title="Music Education | Kaitlin Isaac">
  <Header />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-8 space-y-8">
    <!-- Teaching Philosophy Section -->
    <section>
      <div class="bg-primary bg-opacity-20 p-6 rounded-lg">
        <h2 class="text-h3 font-medium mb-4">Teaching Philosophy</h2>
        <div class="space-y-md">
          <p class="text-body leading-relaxed">
            I believe that music education is essential for the complete development of every child. Music teaches 
            creativity, discipline, teamwork, and provides a unique way to express emotions and ideas.
          </p>
          
          <p class="text-body leading-relaxed">
            My approach incorporates:
          </p>
          
          <ul class="list-disc pl-6 space-y-2">
            <li>Student-centered learning experiences</li>
            <li>Culturally responsive teaching methods</li>
            <li>Integration of technology when appropriate</li>
            <li>Focus on both individual growth and ensemble skills</li>
            <li>Creating a safe, supportive learning environment</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Lessons & Materials Section -->
    <section>
      <div class="bg-accent bg-opacity-30 p-4 rounded-lg">
        <h2 class="text-h3 font-medium mb-4">Lessons & Materials</h2>
        
        <div class="space-y-4">
          <!-- Lesson Card 1 -->
          <div class="bg-surface rounded-lg p-4 flex items-start gap-4 shadow-sm">
            <div class="w-12 h-12 bg-gray-200 rounded-full flex-shrink-0"></div>
            <div>
              <h3 class="font-medium">Beginning Band: First Notes</h3>
              <p class="text-sm text-content-muted">Tips for helping students produce their first sounds on wind instruments...</p>
            </div>
          </div>
          
          <!-- Lesson Card 2 -->
          <div class="bg-surface rounded-lg p-4 flex items-start gap-4 shadow-sm">
            <div class="w-12 h-12 bg-gray-200 rounded-full flex-shrink-0"></div>
            <div>
              <h3 class="font-medium">Rhythm Basics: Quarter & Eighth Notes</h3>
              <p class="text-sm text-content-muted">Interactive activities to help students understand rhythm patterns...</p>
            </div>
          </div>
        </div>
        
        <!-- See All Button -->
        <div class="flex justify-end mt-4">
          <a href="/music-education/lessons" class="bg-primary text-content px-6 py-2 rounded-full text-sm font-medium hover:bg-primary-dark transition-colors">
            see all →
          </a>
        </div>
      </div>
    </section>

    <!-- Videos Section -->
    <section>
      <div class="bg-accent bg-opacity-30 p-4 rounded-lg">
        <h2 class="text-h3 font-medium mb-4">Videos</h2>
        
        <div class="grid grid-cols-3 gap-2">
          <!-- Video Thumbnail 1 -->
          <div>
            <div class="aspect-video bg-gray-200 rounded-md mb-1"></div>
            <p class="text-xs text-center font-medium">Student Concerts</p>
          </div>
          
          <!-- Video Thumbnail 2 -->
          <div>
            <div class="aspect-video bg-gray-200 rounded-md mb-1"></div>
            <p class="text-xs text-center font-medium">Classroom Videos</p>
          </div>
          
          <!-- Video Thumbnail 3 -->
          <div>
            <div class="aspect-video bg-gray-200 rounded-md mb-1"></div>
            <p class="text-xs text-center font-medium">Flute Performances</p>
          </div>
        </div>
        
        <!-- See All Button -->
        <div class="flex justify-end mt-4">
          <a href="/music-education/videos" class="bg-primary text-content px-6 py-2 rounded-full text-sm font-medium hover:bg-primary-dark transition-colors">
            see all →
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout> 