---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Heading from '../../components/Heading.astro';
import { getCollection } from 'astro:content';

// Get videos from content collection
const allVideos = await getCollection('videos');
const videos = allVideos.map(video => ({
  id: video.id.split('/').pop().split('.')[0],
  title: video.data.title,
  description: video.data.description,
  thumbnail: video.data.thumbnail || "/images/videos/placeholder.jpg",
  category: video.data.category
}));

// Group videos by category
const categories = {
  "student-concerts": {
    title: "Student Concerts",
    videos: videos.filter(video => video.category === "student-concerts")
  },
  "classroom-videos": {
    title: "Classroom Videos",
    videos: videos.filter(video => video.category === "classroom-videos")
  },
  "flute-performances": {
    title: "Flute Performances",
    videos: videos.filter(video => video.category === "flute-performances")
  }
};
---

<Layout title="Videos | Music Education | Kaitlin Isaac">
  <Header />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-8 space-y-12">
    <!-- Header -->
    <div>
      <Heading level={1} class="text-center mb-2">
        Videos
      </Heading>
      <p class="text-center text-content-muted mb-8">
        Classroom demonstrations, student performances, and educational content
      </p>
      
      <!-- Back link -->
      <a href="/music-education" class="inline-flex items-center gap-2 text-primary hover:underline mb-8">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        Back to Music Education
      </a>
    </div>

    <!-- Video Categories -->
    {Object.entries(categories).map(([categoryId, category]) => (
      <section class="space-y-6">
        <Heading level={2} class="text-xl text-primary">
          {category.title}
        </Heading>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {category.videos.map(video => (
            <a 
              href={`/music-education/videos/${video.category}/${video.id}`}
              class="block bg-surface rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow"
            >
              <div class="aspect-video bg-gray-200 flex items-center justify-center text-gray-500">
                [video thumbnail]
              </div>
              <div class="p-4">
                <h3 class="font-medium text-h5 text-primary">{video.title}</h3>
                <p class="text-content-muted text-sm line-clamp-2">{video.description}</p>
              </div>
            </a>
          ))}
        </div>
      </section>
    ))}
  </main>
</Layout> 