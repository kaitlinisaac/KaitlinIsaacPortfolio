---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Heading from '../../components/Heading.astro';

// This could later be moved to a content collection
const lessons = [
  {
    title: "Beginning Band: First Notes",
    description: "Tips for helping students produce their first sounds on wind instruments and establish good habits from the start.",
    thumbnail: "/images/lessons/placeholder.jpg",
    link: "/music-education/lessons/beginning-band-first-notes"
  },
  {
    title: "Rhythm Basics: Quarter & Eighth Notes",
    description: "Interactive activities to help students understand rhythm patterns and develop steady pulse through engaging exercises.",
    thumbnail: "/images/lessons/placeholder.jpg",
    link: "/music-education/lessons/rhythm-basics"
  },
  {
    title: "Instrument Care & Maintenance",
    description: "Essential care routines for band instruments to ensure they stay in good working condition and last for years.",
    thumbnail: "/images/lessons/placeholder.jpg",
    link: "/music-education/lessons/instrument-care"
  },
  {
    title: "Ensemble Skills for Beginners",
    description: "Teaching young musicians how to listen to each other and play together as a cohesive ensemble.",
    thumbnail: "/images/lessons/placeholder.jpg",
    link: "/music-education/lessons/ensemble-skills"
  },
  {
    title: "Music Literacy: Reading Notation",
    description: "Step-by-step approach to teaching students how to read musical notation with confidence.",
    thumbnail: "/images/lessons/placeholder.jpg",
    link: "/music-education/lessons/music-literacy"
  },
  {
    title: "Practice Strategies for Students",
    description: "Effective practice techniques to help students make the most of their practice time at home.",
    thumbnail: "/images/lessons/placeholder.jpg",
    link: "/music-education/lessons/practice-strategies"
  }
];
---

<Layout title="Lessons & Materials | Music Education | Kaitlin Isaac">
  <Header />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-8 space-y-8">
    <!-- Header -->
    <div>
      <Heading level={1} class="text-center mb-2">
        Lessons & Materials
      </Heading>
      <p class="text-center text-content-muted mb-8">
        Resources for music educators, students, and parents
      </p>
      
      <!-- Back link -->
      <a href="/music-education" class="inline-flex items-center gap-2 text-primary hover:underline mb-8">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        Back to Music Education
      </a>
    </div>

    <!-- Lessons Grid -->
    <div class="space-y-6">
      {lessons.map((lesson) => (
        <a 
          href={lesson.link}
          class="block bg-surface rounded-lg p-4 flex items-start gap-4 shadow-sm hover:shadow-md transition-shadow"
        >
          <div class="w-16 h-16 bg-gray-200 rounded-full flex-shrink-0"></div>
          <div>
            <h3 class="font-medium text-h4 text-primary">{lesson.title}</h3>
            <p class="text-content-muted">{lesson.description}</p>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout> 