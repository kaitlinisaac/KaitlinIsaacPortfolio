---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Section from '../components/Section.astro';
import Heading from '../components/Heading.astro';
import ArrowLink from '../components/ArrowLink.astro';

// Define the roles with a dot separator
const roles = [
  { text: "music educator" },
  { text: "techy designer" }
];

const highlights = [
{
  "title": "Former Band Teacher",
  "org": "Middle School Music Education",
  "orgUrl": "/music-education",
  "description": "With years of experience teaching band to middle school students, I've developed a passion for <strong>music education</strong> and creating engaging learning experiences. I believe that <strong>music is for everyone</strong> and work to make it accessible to students of all backgrounds and ability levels."
},
{
  "title": "UX Designer",
  "org": "Digital Experience Design",
  "orgUrl": "/design",
  "description": "I create thoughtful, accessible digital experiences that center around user needs. My approach combines <strong>analytical thinking</strong> with <strong>creative problem-solving</strong> to design interfaces that are both functional and delightful to use."
}
];

---

<Layout title="Kaitlin Isaac - Music Educator & Designer">
  <Header />
  
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-16 space-y-16">
    <!-- Hero Section with profile image and roles -->
    <section class="space-y-6 flex flex-col items-center">
      <div class="w-36 h-36">
        <img
          src="/kaitlinsquare.jpeg"
          alt="Profile picture of Kaitlin Isaac"
          width="144"
          height="144"
          loading="eager"
          decoding="async"
          class="w-full h-full object-cover rounded-full bg-surface-muted"
        />
      </div>
      
      <!-- Roles with dot separator -->
      <div class="flex items-center justify-center gap-2">
        {roles.map((role, index) => (
          <>
            <span class="text-body text-content-muted dark:text-dark-content-muted">
              {role.text}
            </span>
            {index < roles.length - 1 && (
              <span 
                class="w-2 h-2 rounded-full bg-iconColor"
                aria-hidden="true"
              ></span>
            )}
          </>
        ))}
      </div>
      
      <!-- Placeholder text paragraph -->
      <p class="text-lg leading-relaxed text-center">
        Occaecat ullamco pariatur officia nisi consequat. Nostrud eu qui culpa in fugiat qui magna. Consectetur sit ea labore qui dolore mollit velit exercitation fugiat irure commodo proident. Id laboris cillum anim ipsum aliquip consectetur laborum minim adipisicing fugiat aliqua ullamco ex.
      </p>
    </section>
    
    <!-- Action buttons -->
    <Section title="Quick Links">
      <div class="flex justify-between w-full">
        <a href="/resume" class="flex items-center justify-center flex-col no-underline-link">
          <div class="w-20 h-20 rounded-full bg-iconColor flex items-center justify-center mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-content">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <path d="M14 2v6h6"></path>
              <path d="M16 13H8"></path>
              <path d="M16 17H8"></path>
              <path d="M10 9H8"></path>
            </svg>
          </div>
          <span class="text-small">download my resume</span>
        </a>
        
        <a href="/contact" class="flex items-center justify-center flex-col no-underline-link">
          <div class="w-20 h-20 rounded-full bg-iconColor flex items-center justify-center mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-content">
              <rect x="2" y="4" width="20" height="16" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
          </div>
          <span class="text-small">let's get in touch</span>
        </a>
      </div>
    </Section>
  </main>
</Layout>

<style>
  /* Add subtle animation to role dots on hover */
  .roles:hover .dot {
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }
</style>