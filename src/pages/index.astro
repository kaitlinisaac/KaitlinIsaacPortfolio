---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Section from '../components/Section.astro';
import Heading from '../components/Heading.astro';
import ArrowLink from '../components/ArrowLink.astro';

const roles = [
  { text: "Music Educator", color: "bg-primary" },
  { text: "UX Designer", color: "bg-primary" },
  { text: "Crochet Artist", color: "bg-primary" }
];

const highlights = [
{
  "title": "Former Band Teacher",
  "org": "Middle School Music Education",
  "orgUrl": "/music-education",
  "description": "With years of experience teaching band to middle school students, I've developed a passion for <strong>music education</strong> and creating engaging learning experiences. I believe that <strong>music is for everyone</strong> and work to make it accessible to students of all backgrounds and ability levels."
},
{
  "title": "UX Designer",
  "org": "Digital Experience Design",
  "orgUrl": "/design",
  "description": "I create thoughtful, accessible digital experiences that center around user needs. My approach combines <strong>analytical thinking</strong> with <strong>creative problem-solving</strong> to design interfaces that are both functional and delightful to use."
}
];

---

<Layout title="Kaitlin Isaac - Music Educator & UX Designer">
  <Header />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-16 space-y-16">
    <!-- Hero Section -->
    <section class="space-y-6 max-w-2xl">
      <Heading 
        level={1}
        class="sr-only"
      >
        Kaitlin Isaac
      </Heading>

      <div class="w-56 h-56 mx-auto mb-8">
        <img
          src="/kaitlinsquare.jpeg"
          alt="Portrait of Kaitlin Isaac"
          width="250"
          height="250"
          loading="eager"
          decoding="async"
          class="w-full h-full object-cover rounded-full"
        />
      </div>

      <div class="flex justify-center">
        <div class="flex items-center gap-3">
          {roles.map((role, index) => (
            <>
              <span class="text-lg text-content-muted dark:text-dark-content-muted">
                {role.text}
              </span>
              {index < roles.length - 1 && (
                <span 
                  class={`w-2 h-2 rounded-full ${role.color} animate-pulse`}
                  aria-hidden="true"
                ></span>
              )}
            </>
          ))}
        </div>
      </div>
      
      <p class="text-lg leading-relaxed">
        I'm a passionate <strong>music educator</strong> and <strong>UX designer</strong> with a love for creating 
        engaging experiences, both in the classroom and in digital spaces.
      </p>
        
      <p class="text-lg leading-relaxed">
        My unique background bridges the gap between music education and digital design, allowing me to approach problems 
        with creativity and empathy. I believe in crafting experiences that are accessible, intuitive, and 
        <em>bring joy to people's lives</em>.
      </p>
    </section>

    <!-- Professional Highlights -->
    <Section title="What I Do" backgroundColor="primary">
      <div class="space-y-lg max-w-2xl">
        {highlights.map(({ title, org, orgUrl, description }) => (
          <div class="space-y-sm group">
            <div class="flex items-baseline gap-2">
              <Heading level={3} class="text-h4 font-medium">{title}</Heading>
              <a 
                href={orgUrl}
                class="text-h4 text-content-muted dark:text-dark-content-muted underline decoration-1 underline-offset-4 hover:decoration-2 focus:decoration-2 hover:text-accent focus:text-accent transition-all"
              >
                {org}
              </a>
            </div>
            <p 
              class="text-body text-content-muted dark:text-dark-content-muted leading-relaxed [&_a]:text-content-muted [&_a]:dark:text-dark-content-muted [&_a]:underline [&_a]:decoration-1 [&_a]:underline-offset-4 [&_a]:hover:decoration-2 [&_a]:focus:decoration-2 [&_a]:hover:text-accent [&_a]:focus:text-accent [&_a]:transition-all" 
              set:html={description} 
            />
          </div>
        ))}
      </div>
    </Section>

    <!-- Hobbies Section -->
    <Section title="Beyond Work" backgroundColor="accent">
      <div class="space-y-md">
        <p class="text-body leading-relaxed">
          When I'm not teaching or designing, you can find me:
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-surface-muted dark:bg-dark-surface-muted p-6 rounded-lg">
            <h3 class="font-medium text-h4 mb-3">Crocheting</h3>
            <p>Creating beautiful, handcrafted items and translating pixel art into crochet patterns.</p>
          </div>
          <div class="bg-surface-muted dark:bg-dark-surface-muted p-6 rounded-lg">
            <h3 class="font-medium text-h4 mb-3">Gardening</h3>
            <p>Growing flowers, herbs, and vegetables in my garden and connecting with nature.</p>
          </div>
          <div class="bg-surface-muted dark:bg-dark-surface-muted p-6 rounded-lg">
            <h3 class="font-medium text-h4 mb-3">Gaming</h3>
            <p>Playing Stardew Valley and taking on challenges like completing the Community Center in Year One.</p>
          </div>
        </div>
      </div>
    </Section>

    <!-- Quick Links -->
    <section id="lets-connect">
      <h2 class="sr-only">Let's Connect</h2>
      <nav class="flex flex-wrap gap-6" aria-label="Quick links">
        <ArrowLink href="/music-education">
          Music Education
        </ArrowLink>
        <ArrowLink href="/design">
          Design Work
        </ArrowLink>
        <ArrowLink href="/blog">
          Read my blog
        </ArrowLink>
        <ArrowLink href="/contact">
          Contact me
        </ArrowLink>
      </nav>
    </section>
  </main>
</Layout>

<style>
  /* Add subtle animation to role dots on hover */
  .roles:hover .dot {
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }
</style>