---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Section from '../components/Section.astro';
import Heading from '../components/Heading.astro';
import ArrowLink from '../components/ArrowLink.astro';

const roles = [
  { text: "Enablement Engineer", color: "bg-accent" },
  { text: "Systems Thinker", color: "bg-accent" }
];

const highlights = [
{
  "title": "AI Accessibility Engineer",
  "org": "Deque Systems",
  "orgUrl": "https://deque.com",
  "description": "Leading the development of AI-driven tools like <a href=\"https://dequeuniversity.com/introducing-axe-assistant\">axe Assistant</a>, I focus on creating accessibility solutions that integrate seamlessly across all stages of the Software Development Lifecycle. My mission is to ensure our <strong>digital world</strong> reflects and serves the diverse lived experiences of <strong>all people</strong>."
},
{
  "title": "Co-founder",
  "org": "Automate the Suck out of Life",
  "orgUrl": "https://automatethesuckoutof.life",
  "description": "I believe technology should <strong>empower</strong> and <strong>enable</strong> humans, not distract or oppress us. AtSooL's mission is to amplify society's most essential roles by designing simple systems that automate away monotony, giving people the freedom to focus on what brings them meaning and purpose."
}
];

---

<Layout title="Dylan Isaac - Enablement Engineer & System's Thinker">
  <Header />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-16 space-y-16">
    <!-- Hero Section -->
    <section class="space-y-6 max-w-2xl">
      <Heading 
        level={1}
        class="sr-only"
      >
        Dylan Isaac
      </Heading>

      <div class="w-56 h-56 mx-auto mb-8">
        <img
          src="/me-square.jpg"
          alt="Portrait of Dylan Isaac"
          width="250"
          height="250"
          loading="eager"
          decoding="async"
          class="w-full h-full object-cover rounded-full"
        />
      </div>

      <div class="flex justify-center">
        <div class="flex items-center gap-3">
          {roles.map((role, index) => (
            <>
              <span class="text-lg text-content-muted dark:text-dark-content-muted">
                {role.text}
              </span>
              {index < roles.length - 1 && (
                <span 
                  class={`w-2 h-2 rounded-full ${role.color} animate-pulse`}
                  aria-hidden="true"
                ></span>
              )}
            </>
          ))}
        </div>
      </div>
      
      <p class="text-lg leading-relaxed">
        I am an engineer, designer, and systems thinker dedicated to <strong>democratizing technology</strong> and 
        <strong>empowering people</strong>. 
      </p>
        
      <p class="text-lg leading-relaxed">
        My current focus is on leveraging generative AI to create more 
        intuitive and accessible computing experiences - 
        <em>
          having computers adapt to people's needs 
          rather than forcing people to adapt to computers.
        </em>
      </p>
    </section>

    <!-- Professional Highlights -->
    <Section title="Current Work" backgroundColor="primary">
      <div class="space-y-lg max-w-2xl">
        {highlights.map(({ title, org, orgUrl, description }) => (
          <div class="space-y-sm group">
            <div class="flex items-baseline gap-2">
              <Heading level={3} class="text-h4 font-medium">{title}</Heading>
              <a 
                href={orgUrl}
                class="text-h4 text-content-muted dark:text-dark-content-muted underline decoration-1 underline-offset-4 hover:decoration-2 focus:decoration-2 hover:text-accent focus:text-accent transition-all"
                target="_blank"
                rel="noopener noreferrer"
              >
                {org}
              </a>
            </div>
            <p 
              class="text-body text-content-muted dark:text-dark-content-muted leading-relaxed [&_a]:text-content-muted [&_a]:dark:text-dark-content-muted [&_a]:underline [&_a]:decoration-1 [&_a]:underline-offset-4 [&_a]:hover:decoration-2 [&_a]:focus:decoration-2 [&_a]:hover:text-accent [&_a]:focus:text-accent [&_a]:transition-all" 
              set:html={description} 
            />
          </div>
        ))}
      </div>
    </Section>

    <!-- Quick Links -->
    <section id="lets-work-together">
      <h2 class="sr-only">Let's Work Together</h2>
      <nav class="flex gap-6" aria-label="Quick links">
        <ArrowLink href="/writing">
          Read my writing
        </ArrowLink>
        <ArrowLink href="/projects">
          View my projects
        </ArrowLink>
      </nav>
    </section>
  </main>
</Layout>

<style>
  /* Add subtle animation to role dots on hover */
  .roles:hover .dot {
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }
</style>