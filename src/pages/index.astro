---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Section from '../components/Section.astro';
import Heading from '../components/Heading.astro';

const roles = [
  { text: "Engineer", color: "bg-primary" },
  { text: "Designer", color: "bg-secondary" },
  { text: "Systems Thinker", color: "bg-accent" }
];

const highlights = [
  {
    title: "AI Accessibility Engineer",
    org: "Deque Systems",
    description: "Leading development of AI-driven tools like axe Assistant to automate digital accessibility testing and remediation."
  },
  {
    title: "Co-founder",
    org: "Automate the Suck out of Life",
    description: "Making automation tools and AI technologies accessible to underserved communities."
  }
];

// Now we can automatically generate headings array based on the content
const headings = [
  { id: "dylan-isaac-personal-website", text: "Dylan Isaac", depth: 1 },
  { id: "current-work", text: "Current Work", depth: 2 }
];
---

<Layout title="Dylan Isaac - Engineer & Designer">
  <Header headings={headings} />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-16 space-y-16">
    <!-- Hero Section -->
    <section class="space-y-6">
      <Heading 
        level={1} 
        class="sr-only"
      >
        Dylan Isaac - Engineer, Designer, System's Thinker
      </Heading>

      <div class="w-56 h-56 mx-auto mb-8">
        <img
          src="/me-square.jpg"
          alt="Portrait of Dylan Isaac"
          width="250"
          height="250"
          loading="eager"
          decoding="async"
          class="w-full h-full object-cover rounded-full"
        />
      </div>

      <div class="flex justify-center">
        <div class="flex items-center gap-3">
          {roles.map((role, index) => (
            <>
              <span class="text-lg text-content-muted dark:text-dark-content-muted">
                {role.text}
              </span>
              {index < roles.length - 1 && (
                <span 
                  class={`w-2 h-2 rounded-full ${role.color} animate-pulse`}
                  aria-hidden="true"
                ></span>
              )}
            </>
          ))}
        </div>
      </div>
      
      <p class="text-lg leading-relaxed">
        I am an engineer, designer, and systems thinker dedicated to <strong>democratizing technology</strong> and 
        <strong>empowering people</strong>. 
      </p>
        
        <p class="text-lg leading-relaxed">
        My current focus is on leveraging generative AI to create more 
        intuitive and accessible computing experiences - 
        <em>
          having computers adapt to people's needs 
          rather than forcing people to adapt to computers.
        </em>
      </p>
    </section>

    <!-- Professional Highlights -->
    <Section title="Current Work" backgroundColor="primary">
      <Heading level={2} class="sr-only">Current Work</Heading>
      <div class="space-y-8">
        {highlights.map(({ title, org, description }) => (
          <div class="space-y-2 group">
            <div class="flex items-baseline gap-2">
              <Heading level={3} class="font-medium">{title}</Heading>
              <span class="text-content-muted dark:text-dark-content-muted">
                {org}
              </span>
            </div>
            <p class="text-content-muted dark:text-dark-content-muted leading-relaxed">
              {description}
            </p>
          </div>
        ))}
      </div>
    </Section>

    <!-- Quick Links -->
    <nav class="flex gap-6 text-sm" aria-label="Quick links">
      <a 
        href="/writing" 
        class="group flex items-center gap-1 text-gray-600 dark:text-gray-300 hover:text-menu-1 transition-colors"
      >
        Read my writing
        <span class="group-hover:translate-x-1 transition-transform">→</span>
      </a>
      <a 
        href="/projects" 
        class="group flex items-center gap-1 text-gray-600 dark:text-gray-300 hover:text-menu-2 transition-colors"
      >
        View my projects
        <span class="group-hover:translate-x-1 transition-transform">→</span>
      </a>
    </nav>
  </main>
</Layout>

<style>
  /* Add subtle animation to role dots on hover */
  .roles:hover .dot {
    animation: pulse 2s infinite;
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
  }
</style>