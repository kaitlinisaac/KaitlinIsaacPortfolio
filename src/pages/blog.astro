---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Section from '../components/Section.astro';
import Heading from '../components/Heading.astro';
import BlogPost from '../components/BlogPost.astro';

const posts = [
  {
    title: "Tips for Beginning Band Students",
    description: "Helpful advice for students just starting their musical journey in band.",
    date: "2023-09-15",
    category: "Music Education",
    slug: "/blog/tips-for-beginning-band-students",
    tags: ["music education", "band", "beginners"]
  },
  {
    title: "The Importance of User Testing in Design",
    description: "Why testing your designs with real users is crucial for creating effective products.",
    date: "2023-08-22",
    category: "Design",
    slug: "/blog/importance-of-user-testing",
    tags: ["ux design", "user testing", "research"]
  },
  {
    title: "Creating Effective Practice Routines",
    description: "How to structure practice sessions for maximum effectiveness and enjoyment.",
    date: "2023-07-10",
    category: "Private Lessons",
    slug: "/blog/effective-practice-routines",
    tags: ["practice", "music education", "productivity"]
  },
  {
    title: "Balancing Creativity and Usability in UI Design",
    description: "Finding the sweet spot between creative expression and functional user interfaces.",
    date: "2023-06-05",
    category: "Design",
    slug: "/blog/balancing-creativity-and-usability",
    tags: ["ui design", "creativity", "usability"]
  }
];
---

<Layout title="Blog | Kaitlin Isaac">
  <Header />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-16 space-y-16">
    <!-- Hero Section -->
    <section class="space-y-6 max-w-2xl">
      <Heading 
        level={1}
        class="text-center"
      >
        Blog
      </Heading>
      
      <p class="text-lg leading-relaxed">
        Welcome to my blog where I share insights, tips, and experiences about music education, 
        UX design, and my journey combining these two passions. Here you'll find helpful 
        resources and personal reflections.
      </p>
    </section>

    <!-- Recent Posts Section -->
    <Section title="Recent Posts" backgroundColor="primary">
      <div class="space-y-lg">
        {posts.map((post) => (
          <BlogPost 
            title={post.title}
            description={post.description}
            date={post.date}
            category={post.category}
            slug={post.slug}
          />
        ))}
      </div>
    </Section>
  </main>
</Layout> 