---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Section from '../components/Section.astro';
import Heading from '../components/Heading.astro';
import BlogPost from '../components/BlogPost.astro';

const posts = [
  {
    title: "Tips for Beginning Band Students",
    description: "Helpful advice for students just starting their musical journey in band.",
    date: "2023-09-15",
    category: "Music Education",
    slug: "/blog/tips-for-beginning-band-students",
    tags: ["music education", "band", "beginners"]
  },
  {
    title: "The Importance of User Testing in Design",
    description: "Why testing your designs with real users is crucial for creating effective products.",
    date: "2023-08-22",
    category: "Design",
    slug: "/blog/importance-of-user-testing",
    tags: ["ux design", "user testing", "research"]
  },
  {
    title: "Creating Effective Practice Routines",
    description: "How to structure practice sessions for maximum effectiveness and enjoyment.",
    date: "2023-07-10",
    category: "Private Lessons",
    slug: "/blog/effective-practice-routines",
    tags: ["practice", "music education", "productivity"]
  },
  {
    title: "Balancing Creativity and Usability in UI Design",
    description: "Finding the sweet spot between creative expression and functional user interfaces.",
    date: "2023-06-05",
    category: "Design",
    slug: "/blog/balancing-creativity-and-usability",
    tags: ["ui design", "creativity", "usability"]
  }
];
---

<Layout title="Blog | Kaitlin Isaac">
  <Header />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-16 space-y-16">
    <!-- Hero Section -->
    <section class="space-y-6 max-w-2xl">
      <Heading 
        level={1}
        class="text-center"
      >
        Blog
      </Heading>
      
      <p class="text-lg leading-relaxed">
        Welcome to my blog where I share insights, tips, and experiences about music education, 
        UX design, and my journey combining these two passions. Here you'll find helpful 
        resources and personal reflections.
      </p>
    </section>

    <!-- Categories Section -->
    <Section title="Categories" backgroundColor="secondary">
      <div class="flex flex-wrap gap-4">
        <a href="/blog/category/music-education" class="tag tag-primary">Music Education</a>
        <a href="/blog/category/design" class="tag tag-secondary">Design</a>
        <a href="/blog/category/private-lessons" class="tag tag-accent">Private Lessons</a>
        <a href="/blog/category/personal" class="tag tag-primary">Personal</a>
      </div>
    </Section>

    <!-- Recent Posts Section -->
    <Section title="Recent Posts" backgroundColor="primary">
      <div class="space-y-lg">
        {posts.map((post) => (
          <BlogPost 
            title={post.title}
            description={post.description}
            date={post.date}
            category={post.category}
            slug={post.slug}
          />
        ))}
      </div>
    </Section>

    <!-- Newsletter Section -->
    <Section title="Stay Updated" backgroundColor="accent">
      <div class="space-y-md">
        <p class="text-body leading-relaxed">
          Subscribe to my newsletter to receive new blog posts, resources, and updates directly in your inbox.
        </p>
        
        <form class="mt-6 space-y-4">
          <div>
            <label for="email" class="block text-small font-medium mb-1">Email Address</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              placeholder="your@email.com" 
              class="w-full px-4 py-2 rounded-lg border border-surface-muted bg-surface dark:bg-dark-surface focus:ring-2 focus:ring-primary focus:border-transparent"
              required
            />
          </div>
          <button 
            type="submit" 
            class="px-6 py-3 bg-primary text-surface font-medium rounded-lg hover:bg-primary-dark transition-colors"
          >
            Subscribe
          </button>
        </form>
      </div>
    </Section>
  </main>
</Layout> 