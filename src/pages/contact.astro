---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Section from '../components/Section.astro';
import Heading from '../components/Heading.astro';
import PillButton from '../components/PillButton.astro';
---

<Layout title="Contact | Kaitlin Isaac">
  <Header />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-16 space-y-16">
    <!-- Hero Section -->
    <section class="space-y-6 max-w-2xl">
      <Heading 
        level={1}
        class="text-center"
      >
        Contact Me
      </Heading>
      
      <p class="text-lg leading-relaxed text-center">
        Have a question about my services, interested in working together, or just want to say hello? 
        Fill out the form below or reach out through any of my social platforms.
      </p>
    </section>

    <!-- Contact Form Section -->
    <Section title="Get in Touch" backgroundColor="primary">
      <div class="space-y-md">
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-small font-medium mb-1">Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                placeholder="Your name" 
                class="w-full px-4 py-2 rounded-lg border border-surface-muted bg-surface dark:bg-dark-surface focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-small font-medium mb-1">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder="your@email.com" 
                class="w-full px-4 py-2 rounded-lg border border-surface-muted bg-surface dark:bg-dark-surface focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              />
            </div>
          </div>
          
          <div>
            <label for="subject" class="block text-small font-medium mb-1">Subject</label>
            <select 
              id="subject" 
              name="subject" 
              class="w-full px-4 py-2 rounded-lg border border-surface-muted bg-surface dark:bg-dark-surface focus:ring-2 focus:ring-primary focus:border-transparent"
              required
            >
              <option value="" disabled selected>Select a topic</option>
              <option value="music-education">Music Education</option>
              <option value="ux-design">UX Design Services</option>
              <option value="private-lessons">Private Lessons</option>
              <option value="collaboration">Collaboration Opportunity</option>
              <option value="other">Other</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-small font-medium mb-1">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              placeholder="Your message here..." 
              class="w-full px-4 py-2 rounded-lg border border-surface-muted bg-surface dark:bg-dark-surface focus:ring-2 focus:ring-primary focus:border-transparent"
              required
            ></textarea>
          </div>
          
          <PillButton 
            isButton={true}
            type="submit"
            backgroundColor="iconColor"
            class="w-full md:w-auto"
          >
            Send Message
          </PillButton>
        </form>
      </div>
    </Section>

    <!-- Other Contact Methods -->
    <Section title="Other Ways to Connect" backgroundColor="secondary">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="space-y-4">
          <h3 class="text-h4 font-medium">Email</h3>
          <p class="text-body">
            <a href="mailto:kaitlin@example.com" class="hover:text-primary transition-colors">
              kaitlin@example.com
            </a>
          </p>
        </div>
        
        <div class="space-y-4">
          <h3 class="text-h4 font-medium">Social Media</h3>
          <ul class="space-y-2">
            <li>
              <a href="https://linkedin.com/" target="_blank" rel="noopener noreferrer" class="hover:text-primary transition-colors flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
