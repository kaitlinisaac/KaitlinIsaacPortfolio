---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Heading from '../components/Heading.astro';
---

<Layout title="Contact | Kaitlin Isaac">
  <Header />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-16 space-y-16">
    <!-- Hero Section -->
    <section class="space-y-6 max-w-2xl">
      <Heading 
        level={1}
        class="text-center"
      >
        Contact Me
      </Heading>
      
      <p class="text-lg leading-relaxed text-center">
        Let's work together!
      </p>
      
      <!-- Contact Buttons -->
      <div class="w-full flex flex-col sm:flex-row justify-center items-center gap-8 sm:gap-10 mt-8">
        <a href="mailto:kaitlinmisaac@gmail.com" class="flex items-center justify-center flex-col no-underline-link">
          <div class="icon-circle w-20 h-20 rounded-full bg-iconColor flex items-center justify-center mb-2 relative overflow-hidden">
            <div class="fill-overlay absolute bottom-0 left-0 right-0 w-full h-0 bg-[#F8DC6F] transition-all duration-300 ease-in-out"></div>
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-content z-10 relative">
              <rect x="2" y="4" width="20" height="16" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
          </div>
          <span class="text-small">Send me an Email</span>
        </a>
        
        <a href="https://linkedin.com/in/kaitlinisaac" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center flex-col no-underline-link">
          <div class="icon-circle w-20 h-20 rounded-full bg-iconColor flex items-center justify-center mb-2 relative overflow-hidden">
            <div class="fill-overlay absolute bottom-0 left-0 right-0 w-full h-0 bg-[#F8DC6F] transition-all duration-300 ease-in-out"></div>
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-content z-10 relative">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </div>
          <span class="text-small">Connect on LinkedIn</span>
        </a>
        
        <a href="https://github.com/kaitlinisaac" target="_blank" rel="noopener noreferrer" class="flex items-center justify-center flex-col no-underline-link">
          <div class="icon-circle w-20 h-20 rounded-full bg-iconColor flex items-center justify-center mb-2 relative overflow-hidden">
            <div class="fill-overlay absolute bottom-0 left-0 right-0 w-full h-0 bg-[#F8DC6F] transition-all duration-300 ease-in-out"></div>
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-content z-10 relative">
              <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
            </svg>
          </div>
          <span class="text-small">Check Out my GitHub</span>
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .icon-circle:hover .fill-overlay {
    height: 100%;
  }
</style> 