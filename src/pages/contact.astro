---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Section from '../components/Section.astro';
import ArrowLink from '../components/ArrowLink.astro';

const expertise = [
  {
    area: "Accessibility Engineering",
    description: "Specializing in creating inclusive digital experiences and implementing WCAG guidelines."
  },
  {
    area: "AI Development", 
    description: "Building intelligent systems that enhance human capabilities rather than replace them."
  },
  {
    area: "System Design",
    description: "Architecting scalable, maintainable solutions with a focus on user experience."
  }
];

const values = [
  {
    title: "Accessibility First",
    description: "Every project starts with accessibility as a core requirement, not an afterthought."
  },
  {
    title: "Human-Centered",
    description: "Technology should adapt to human needs, not the other way around."
  },
  {
    title: "Open Collaboration",
    description: "Building in the open and sharing knowledge to create better solutions together."
  }
];
---

<Layout title="Contact | Dylan Isaac">
  <Header />
  <main id="main" class="max-w-4xl mx-auto px-6 md:px-8 py-16">
    <h1 class="text-4xl font-bold mb-12 text-content dark:text-dark-content">Let's Work Together</h1>

    <div class="space-y-12">
      <!-- Contact Section -->
      <Section title="Get in Touch" backgroundColor='primary'>
        <p class="text-lg mb-4">
          I'm always interested in discussing new projects and opportunities.
        </p>
        <ArrowLink href="mailto:your.email@example.com">
          your.email@example.com
        </ArrowLink>
      </Section>

      <!-- Info Sections -->
      <Section title="Areas of Expertise" backgroundColor="secondary">
        <ul class="space-y-6">
          {expertise.map(({ area, description }) => (
            <li>
              <h3 class="text-xl font-medium mb-2 text-content dark:text-dark-content">{area}</h3>
              <p class="text-content-muted dark:text-dark-content-muted">{description}</p>
            </li>
          ))}
        </ul>
      </Section>

      <Section title="Values" backgroundColor="accent">
        <ul class="space-y-6">
          {values.map(({ title, description }) => (
            <li>
              <h3 class="text-xl font-medium mb-2 text-content dark:text-dark-content">{title}</h3>
              <p class="text-content-muted dark:text-dark-content-muted">{description}</p>
            </li>
          ))}
        </ul>
      </Section>
    </div>
  </main>
</Layout> 