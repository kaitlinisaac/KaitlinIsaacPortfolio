---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PillButton from '../components/PillButton.astro';
---

<Layout title="Design Work | Kaitlin Isaac">
  <Header />
  <main id="main" class="max-w-2xl mx-auto px-6 md:px-8 py-16 space-y-16">
    <!-- Work in Progress Message -->
    <section class="space-y-8 flex flex-col items-center text-center">
      <h1 class="text-4xl md:text-5xl font-bold">Excuse the Mess 🚧 !</h1>
      
      <p class="text-xl">This site is still in progress. 👷🏽‍♀️</p>
      
      <div class="h-px w-24 bg-primary my-4"></div>
      
      <p class="text-xl">In the meantime</p>
      
      <!-- GitHub Button -->
      <div class="mt-6">
        <PillButton 
          href="https://github.com/kaitlinisaac" 
          external={true}
          class="w-fit"
        >
          <span>Check Out My GitHub</span>
        </PillButton>
      </div>
    </section>
  </main>
</Layout> 