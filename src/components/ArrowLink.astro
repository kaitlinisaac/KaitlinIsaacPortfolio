---
interface Props {
  href: string;
  external?: boolean;
  class?: string;
}

const { 
  href,
  external = false,
  class: className 
} = Astro.props;

const externalProps = external ? {
  target: "_blank",
  rel: "noopener noreferrer"
} : {};
---

<a 
  href={href}
  class:list={[
    "group inline-flex items-center gap-1",
    "text-content-muted hover:text-primary dark:text-gray-400 dark:hover:text-primary transition-colors text-lg",
    "no-underline-link",
    className
  ]}
  {...externalProps}
>
  <slot />
  <span 
    class="group-hover:translate-x-1 transition-transform"
    aria-hidden="true"
  >
    â†’
  </span>
</a> 