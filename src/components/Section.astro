---
import Heading from './Heading.astro';

interface Props {
  title: string;
  backgroundColor?: 'primary' | 'secondary' | 'accent' | 'accent-yellow';
}

const { title, backgroundColor = 'accent' } = Astro.props;

const bgColorMap = {
  primary: 'bg-iconColor/10 dark:bg-iconColor/20',
  secondary: 'bg-secondary/10 dark:bg-secondary/20',
  accent: 'bg-accent/10 dark:bg-accent/20',
  'accent-yellow': 'bg-accent-yellow/10 dark:bg-accent-yellow/20'
};
---
<section class="mb-16">
  <Heading 
    level={2} 
    class="mb-lg"
  >
    {title}
  </Heading>
  <div class="mt-6">
    <slot />
  </div>
</section>