---
import Heading from './Heading.astro';

interface Props {
  title: string;
  backgroundColor: string;
}

const { title, backgroundColor } = Astro.props;
---
<section>
  <Heading 
    level={2} 
    class={`text-h2 font-bold mb-lg p-sm inline-block ${backgroundColor} text-content rounded-lg focus-ring`}
  >
    {title}
  </Heading>
  <div class="bg-surface-secondary dark:bg-dark-surface-secondary rounded-lg p-lg">
    <slot />
  </div>
</section>